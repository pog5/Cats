@model Cat

<h1>Add Cat</h1>

<form asp-controller="Cats" asp-action="Add" method="post" class="form-control">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text" />
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" type="number" />
    </div>
    <div class="form-group">
        <label asp-for="Breed"></label>
        <input asp-for="Breed" type="text" />
    </div>
    <div class="form-group">
        <label asp-for="ImgUrl"></label>
        <input asp-for="ImgUrl" type="text" />
    </div>
    <input type="submit" value="Add Cat" />
</form>